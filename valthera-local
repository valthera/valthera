    echo "  ‚Ä¢ S3: http://localhost:4566"
    echo "  ‚Ä¢ SQS: http://localhost:4566"
    echo "  ‚Ä¢ Cognito: http://localhost:9239"
    echo ""
    
    echo "üõ†Ô∏è AWS CLI Examples:"
    echo "  ‚Ä¢ DynamoDB: aws dynamodb list-tables --endpoint-url http://localhost:8000"
    echo "  ‚Ä¢ S3: aws s3 ls --endpoint-url http://localhost:4566"
    echo "  ‚Ä¢ SQS: aws sqs list-queues --endpoint-url http://localhost:4566"
    echo "  ‚Ä¢ Cognito: aws cognito-idp list-user-pools --max-results 10 --endpoint-url http://localhost:9239"
    echo ""
    
    echo "‚öôÔ∏è Environment Variables:"
